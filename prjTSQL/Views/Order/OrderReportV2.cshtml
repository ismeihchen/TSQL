    <div class="col-xs-8">
        <table class="table">
            <tr>
                <th>客戶名稱</th>           
                <th>2009/08/01</th>
                <th>2009/08/02</th>
                <th>2009/08/03</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Cust_Name!=null ? item.Cust_Name : "合計")</td>                
                    <td>@item.C2009_08_01</td>
                    <td>@item.C2009_08_02</td>
                    <td>@item.C2009_08_03</td>
                </tr>
            }
        </table>
