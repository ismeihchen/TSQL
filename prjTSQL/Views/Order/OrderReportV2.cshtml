@model IEnumerable<prjTSQL.Models.usp_GetOrderReportV2_Result>
@{
    ViewBag.Title = "訂單數據表(含每日合計)";
}

<h2>@ViewBag.DepName</h2>

<div class="row">
    <div class="col-xs-4">
        <p>@Html.ActionLink("1.訂單查詢", "Index")</p>
        <p>@Html.ActionLink("2.訂單查詢(依日期展開)", "OrderReport")</p>
        <p>3.訂單查詢(依日期展開並含每日合計)</p>
